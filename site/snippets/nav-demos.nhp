var fs = require('fs');
var path = require('path');

var files = await new Promise((resolve, reject) => {
    fs.readdir(path.join(__dirname, '../demos'), (err, files) => {
        if (err) {
            reject(err);
        } else {
            resolve(files);
        }
    });
});

<ul>
    files.filter(item => item.match(/\.nhp$/)).forEach((demo) => {
        <li>
            <a href="/demo.nhp?demo=${ demo }">${ demo }</a>
        </li>
    });
</ul>